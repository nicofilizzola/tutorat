<style>
   :root {
      --primaryRed: #FF3A39;
      --primaryRedLessOpacity: #FF9A9A;
   }

   html {
      font-family: "Helvetica Neue", Helvetica, "Bitstream Vera Sans", sans-serif;
      font-size: 16px;
   }

   body {
      margin: 0;
      padding: 15px;
      background-color: #fff;
   }  

   a {
      text-decoration: none;
      color: #000;
   }

   h1 {
      color: var(--primaryRed);
      margin: 0;
      font-size: 1.5em;
   }

   .lineHoverEffect {
      position: relative;
      margin: 0;
   }

   .lineHoverEffect:hover span::after {
      transform-origin: bottom left;
      transform: scaleX(0);
   }
      
   .lineHoverEffect span::after {
      content: '';
      position: absolute;
      width: 100%;
      height: 1px;
      bottom: 0;
      left: 0;
      background: var(--primaryRed);
      transform: scaleX(1);
      transform-origin: bottom right;
      transition: transform 0.75s ease;
   }

   .btn {
      padding: 20px 30px;
      outline: none;
      border: none;
      cursor: pointer;
      background-color: rgba(255, 58, 57, .5);
      color: #fff;
      font-weight: bold;
      font-size: 1.2em;
      border-radius: 2px;
      overflow: hidden;
      position: relative;
   }

   .btn:before {
      content: "";
      width: 24px;
      height: 24px;
      background: var(--primaryRed);
      border-radius: 50%;
      position: absolute;
      transition: 400ms;
      z-index: -1;

      top: calc(50% - 12px);
      left: calc(50% - 12px);
      transform: scale(0);
   }

   .btn:hover:before {
      transform: scale(30);
   }

   .btn__tinyEffect:hover:before {
      transform: scale(10);
   }

   .btn__mediumEffect:hover:before {
      transform: scale(14);
   }

   .btn__tiny {
      padding: 15px 20px;
      font-size: .8em;
   }




   .container, .title, .request, .content, .link {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      align-items: flex-start;
      width: 100%;
   }

   .title, .request, .content {
      margin-bottom: 25px;
   }

   .title span {
      font-size: 2em;
      font-weight: bold;
   }

   footer {
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      align-items: flex-start;
   }
</style>