{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app_classroom') }}
    {{ encore_entry_link_tags('app') }}
{% endblock %}


{% block body %}
    <div class="smooth--container" data-lg-smooth>
        <div class="container">
            <div class="form--container">
                <div class="form--content">
                    <form action="" method="POST">
                        <select name="" id="">
                        </select>
                        <span>-</span>
                        <select name="" id="">
                        </select>

                        <select name="" id="">
                            <option value="1">S1</option>
                            <option value="2">S2</option>
                        </select>                        
                    </form>
                </div>
            </div>

            <div class="classrooms--container">
                {% for semester in semesters %}
                    {# {% set subjectHasSessions = subject.sessions is empty ? false : subject.sessions | length %} #}
                    <div class="classroomContent--container">
                        <div class="content classroom">
                            <span>{{ semester.name }}</span>
                        </div>
                        
                        <div class="content manage">
                            <button title="Supprimer la salle de cours." onclick="event.preventDefault(); document.querySelector('#js-classroom-delete-form-{{ semester.id }}').submit()" class="delete hoveredItems refuse">
                                <span>üóëÔ∏è</span>
                            </button>
                            <form 
                                id="js-classroom-delete-form-{{ semester.id }}"
                                display="none" 
                                hidden
                                action="{{ path('app_classroom_delete', {"id": semester.id}) }}" 
                                method="POST">
                                <input type="hidden" name="token" value="{{ csrf_token('delete-classroom' ~ semester.id) }}"/>
                            </form> 
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
