{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app_semester') }}
    {{ encore_entry_link_tags('app') }}
{% endblock %}


{% block body %}
    <div class="smooth--container" data-lg-smooth>
        <div class="container">
            <div class="form--container">
                <div class="form--content">
                    {{ form_start(form) }}
                        <div class="collapse collapse_3">
                            {{ form_row(form.startYear, {'label':'Ann√©e du d√©but', 'attr': {'class':'hoveredItems'}}) }} 
                            {{ form_row(form.endYear, {'label':'Ann√©e de fin', 'attr': {'class':'hoveredItems'}}) }} 
                            {{ form_row(form.yearOrder, {'label':'Semestre', 'attr': {'class':'hoveredItems'}}) }} 
                        </div>
                        <button type="submit" class="form--btn form--btn__register hoveredItems">Ajouter</button>
                    {{ form_end(form) }}
                </div>
            </div>

            <div class="semesters--container">
                {% for semester in semesters %}
                    <div class="semesterContent--container">
                        <div class="content semester">
                            <span>{{ semester }}</span>
                        </div>
                        
                        <div class="content manage">
                            {% if loop.index0 == 0 %}
                                <button title="Semestre actuelle, supression impossible" disabled class="disabled hoveredItems refuse">
                                    <span>üóëÔ∏è</span>
                                </button>
                            {% else %}
                                <button title="Supprimer ce semestre" onclick="event.preventDefault(); document.querySelector('#js-semester-delete-form-{{ semester.id }}').submit()" class="delete hoveredItems refuse">
                                    <span>üóëÔ∏è</span>
                                </button>
                            {% endif %}
                            <form 
                                id="js-semester-delete-form-{{ semester.id }}"
                                display="none" 
                                hidden
                                action="{{ path('app_semester_delete', {"id": semester.id}) }}" 
                                method="POST">
                                <input type="hidden" name="token" value="{{ csrf_token('delete-semester' ~ semester.id) }}"/>
                            </form> 
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
