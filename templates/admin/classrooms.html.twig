{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app_subject') }}
    {{ encore_entry_link_tags('app') }}
{% endblock %}


{% block body %}
    <div class="smooth--container" data-lg-smooth>
        <div class="container">
            <div class="form--container">
                <div class="form--content">
                    {{ form_start(form) }}
                        <div class="collapse collapse_3">
                            {{ form_row(form.name, {"label": "Num√©ro"}, {'attr': {'class':'hoveredItems'}}) }}
                        </div>
                        <button type="submit" class="form--btn form--btn__register hoveredItems">Ajouter</button>
                    {{ form_end(form) }}
                </div>
            </div>

            <div class="subjects--container">
                {% for classroom in classrooms %}
                    {# {% set subjectHasSessions = subject.sessions is empty ? false : subject.sessions | length %} #}
                    <div class="subjectContent--container">
                        <div class="content title">
                            <span>{{ classroom.name }}</span>
                        </div>
                        
                        <div class="content manage">
                            <button title="Supprimer la salle de cours." onclick="event.preventDefault(); document.querySelector('#js-classroom-delete-form-{{ classroom.id }}').submit()" class="delete hoveredItems refuse">
                                <span>üóëÔ∏è</span>
                            </button>
                            <form 
                                id="js-classroom-delete-form-{{ classroom.id }}"
                                display="none" 
                                hidden
                                action="{{ path('app_classroom_delete', {"id": classroom.id}) }}" 
                                method="POST">
                                <input type="hidden" name="token" value="{{ csrf_token('delete-classroom' ~ classroom.id) }}"/>
                            </form> 
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
