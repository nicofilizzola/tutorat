                                {{ form_row(registrationForm.year) }}
                            </div>
                            {{ form_row(registrationForm.faculty) }}
                        </div>


                        <div class="mail--container">
                            {{ form_row(registrationForm.email) }}
                            <div>
                                <span>@iut-tarbes.fr</span>
                            </div>
                        </div>

                        {{ form_row(registrationForm.plainPassword) }}
                        
                        <div class="agreeTerms--container">
                            {{ form_widget(registrationForm.agreeTerms) }}
                            {{ form_label(registrationForm.agreeTerms) }}
                        </div>

                        <button type="submit" class="form--btn form--btn__register">S'inscrire</button>
                    {{ form_end(registrationForm) }} #}
                    <div class="mail--container">
                        <div>
                            <label for="inputEmail">Adresse mail IUT</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                        </div>
                        <div>
                            <span>@iut-tarbes.fr</span>
                        </div>
                    </div>
                    <div>
                        <label for="inputPassword">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html #}

                    <div class="agreeTerms--container">
                        <input type="checkbox" id="_remember_me" name="_remember_me">
                        <label for="_remember_me">Se souvenir de moi </label>

                        {# <input type="checkbox" id="registration_form_agreeTerms" name="registration_form[agreeTerms]" required="required" value="1">
                        <label for="registration_form_agreeTerms" class="required">Accepter les conditions d'utilisation</label> #}
                    </div>
    

                    <button class="form--btn form--btn__login" type="submit">Se connecter</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
